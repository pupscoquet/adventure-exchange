<div class= "container-new-booking">
 <div class="your-booking">
    <h1>Your booking</h1>
  </div>

  <div class="your-item">
    <p>Item:</p>
    <h2><%= @item.name %></h2>
  </div>

  <div class="dates">
    <div>
      <p>Choose your dates:</p>
      <%=form_with model: Booking.new do |f| %>
        <div data-controller="price-calculator" data-price-calculator-price-value="<%= @item.price_per_day %>">
          <%= f.text_field :start_date,
                      as: :string,
                      data: {controller: "calendar", action:"input->price-calculator#count", price_calculator_target:"input"},
                    class:"form-control", placeholder:"Select dates..."%>
          <p>Total for <span data-price-calculator-target="days">-</span> days: <strong data-price-calculator-target="total" >-</strong> â‚¬</p>
        </div>
        <%= f.submit "Confirm my booking", class:"confirm", data: {}%>
      <%end%>
    </div>

  </div>
  <div class="sign-in">sign-in</div>


</div>
