                    as: :string,
                    data: {controller: "calendar"},
                   class:"form-control", placeholder:"Select dates..."%>
        <p>Total: <strong><%= @item.price_per_day %> *  â‚¬</strong></p>
        <%= f.submit "Confirm my booking", class:"confirm", data: {controller: "price_calculator"}%>
      <%end%>
    </div>

  </div>
