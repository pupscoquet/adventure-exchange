<section class="listed-items">
<h1 class="header">My items</h1>
<%# how can I interate over the items and display the items %>
<%# items.any? if contains item returns true//
<%#items.each = interating over the array %>
<% if @items.any? %>
  <ul>
    <% @items.each do |item| %>
      <li class="items-li" style= "width: 90%; padding: 13px; margin-bottom: 18px;">
        <div class="flex-items">
          <div class="left-text">
            <h4 style="margin-left: 8px;"> <%= item.name %></h4>
          </div>
          <div>
            <%= link_to '#' do %>
              <p class="button-simple smaller-p" style="margin-top: 0px; padding: 8px 14px;">Edit</p>
            <% end %>
            <%= link_to item_path(item), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
              <p class="button-simple smaller-p" style="margin-top: 4px; padding: 8px 14px;">Delete</p>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <% else %>
    <p class="border-horizontal"> No items </p>
  <% end %>
</section>

<section>
    <%= link_to dashboard_path(current_user) do %>
      <p class="button-important smaller-p" style="width: 160px; margin: 0 auto;">My bookings</p>
    <% end %>
</section>

<%= link_to destroy_user_session_path, data: {turbo_method: :delete} do %>
  <p class="logout"><strong>Log out</strong></p>
<% end %>
